<UserControl x:Class="WPFStarter.TitleBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:WPFStarter"
             mc:Ignorable="d"
             d:DesignHeight="32"
             d:DesignWidth="400">
  <Grid>
    <DockPanel
      Background="#00000000"
      Height="32"
      LastChildFill="False"
      MouseDown="OnMouseDown"
      MouseMove="OnMouseMove"
      Name="TitleBarPanel"
      VerticalAlignment="Top"
      >
        <Button Style="{StaticResource TitleBarCloseButtonStyle}" Width="45" Content="&#xE8BB;" DockPanel.Dock="Right" x:Name="ButtonClose" Click="OnClose"/>
        <Button Style="{StaticResource TitleBarButtonStyle}" Width="45" Content="&#xE922;" DockPanel.Dock="Right" x:Name="ButtonMaximizeOrRestore" Click="OnMaximizeOrRestore"/>
        <Button Style="{StaticResource TitleBarButtonStyle}" Width="45" Content="&#xE921;" DockPanel.Dock="Right" x:Name="ButtonMinimize" Click="OnMinimize"/>
    </DockPanel>
  </Grid>
</UserControl>
